<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelMemories.Views.Login">
    <Grid RowDefinitions="*,Auto, Auto, Auto,Auto,Auto,*">
        <Label Grid.Row="1" Text="LOG IN TO ACCOUNT" HorizontalOptions="Center" FontSize="Large" TextColor="Black"/>
        <Entry Grid.Row="2" Placeholder="Email" HorizontalOptions="Center" WidthRequest="280" TextColor="Gray"/>
        <Entry Grid.Row="3" Placeholder="Password" HorizontalOptions="Center" WidthRequest="280" TextColor="Gray" IsPassword="true" />
        <Button  Grid.Row="4" Text="Log In" BackgroundColor="LightGray" TextColor="Black"
                 HorizontalOptions="Center" BorderWidth="0.5"   WidthRequest="280"  Clicked="Login_Clicked">
        </Button>
        <Button  Grid.Row="5" Text="Forgot Password?"
                 HorizontalOptions="Center" BorderWidth="0.5"  WidthRequest="280" TextColor="Black" BackgroundColor="White">
        </Button>
    </Grid>
</ContentPage>